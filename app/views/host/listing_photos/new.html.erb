<%= provide(:title, "#{@listing.title} - New listing photo") %>

<main class="container my-3">
    <!-- header -->
    <div class="header bg-white my-4 p-3 shadow-sm rounded">
        <h1 class="h4 card-title">New listing photo</h1>
    </div>

    <!-- form -->
    <div class="main-content bg-white p-3 shadow-sm rounded">
        <%= form_with model: [:host, @listing, @listing_photo] do |f| %>

    
            <div class="mb-3">
                <%= f.label :caption %>
                <%= f.text_field :caption, class: "form-control" %>
            </div>
        
            <div class="mb-3">
                <%= f.label :photo %>
                <%= f.file_field :photo, class: "form-control" %>
            </div>

            <div class="mt-3">
                <%= f.submit :submit, class: "btn btn-primary"  %>
            </div>
        <% end %>
    </div>
</main>
