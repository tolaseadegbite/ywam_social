<div class="nested-form-wrapper row w-100" data-new-record="<%= f.object.new_record? %>">
    <div class="col-md-4">
        <%= f.label :caption %>
        <%= f.text_field :caption, class: "form-control" %>
    </div>

    <div class="col-md-4">
        <%= f.label :photo %>
        <%= f.file_field :photo, class: "form-control" %>
    </div>

    <div class="col-md-3">
        <button type="button" class="btn btn-danger btn-sm border my-2" style="font-size: 10px;" data-action="nested-form#remove">Remove photo</button>
    </div>

    <%= f.hidden_field :_destroy %>
</div>
